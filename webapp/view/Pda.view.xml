<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
	controllerName="com.shunyu.pdaUi5.controller.Pda"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <App>
        <pages>
            <Page title="{i18n>PdaView.Title}" id="page" enableScrolling="true">
                <content>
                    <List
						id="ProductList"
						items="{/ProductCollection}"
						includeItemInSelection="true">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <Title text="{i18n>PdaView.Invoices}" level="H2"/>
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <StandardListItem
							title="{Name}"
							description="{ProductId}"
							icon="{ProductPicUrl}"
							iconDensityAware="false"
							iconInset="false"
							press="handlePress"
							detailPress="handleDetailPress" />
                    </List>
                    <!--form:SimpleForm editable="true" layout="ResponsiveGridLayout" id="form" >
					<form:content><Label><layoutData ><layout:GridData span="xL10 L10 M10 S10" />
					</layoutData></Label><Input id="inPrueflos" ><layoutData><layout:GridData span="xL8 L8 M8 S8" />
					</layoutData></Input><Button text="扫描" press="onScan"><layoutData><layout:GridData span="XL2 L2 M2 S2" />
					</layoutData></Button></form:content></form:SimpleForm-->
                </content>
                <footer>
                    <OverflowToolbar>
                        <ToolbarSpacer/>
                        <Button text="{i18n>PdaView.NewInvoice}" type="Reject" press="onCreateInvoice"/>
                        <Button text="{i18n>PdaView.Accept}" type="Accept" />
                    </OverflowToolbar>
                </footer>
            </Page>
        </pages>
    </App>
</mvc:View>